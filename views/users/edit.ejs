<% include ../partials/header %>

        <div class="signupSigninForms">
            <h1 >Edit Profile</h1>
            <form action="/profile/<%= currentUser._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="user[firstname]" placeholder="First Name" value="<%= currentUser.firstname %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="user[lastname]" placeholder="Last Name" value="<%= currentUser.lastname %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="email" name="user[email]" placeholder="email" required value="<%= currentUser.email %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="date" name="user[dob]" placeholder="Date of Birth" value="<%= currentUser.dob %>">
                </div>
                <div class="form-group">
                        <label for="gender">Gender</label>
                        <select class="form-control" name="user[gender]">
                          <option value="Male">Male</option>
                          <option value="Female">Female</option>
                          <option value="Others">Others</option>
                          <option value="">I would prefer to keep it confidential.</option>
                        </select>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="user[about]" placeholder="About Me" value="<%= currentUser.about %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block">Update</button>
                </div>
            </form>
            <a href="/profile">Go Back</a>
        </div>

    

    <% include ../partials/footer %>