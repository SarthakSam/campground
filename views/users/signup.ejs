<% include ../partials/header %>

        <div class="signupSigninForms">
            <h1 >Register</h1>
            <form action="/signup" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="username">
                </div>
                <div class="form-group">
                    <input class="form-control" type="email" name="email" placeholder="email">
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="password">
                </div>
                <div class="form-group">
                    <input type="checkbox"  name="checkbox" class="form-control" required>
                    <span>I have read and agree to terms and conditions</span>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block">Signup</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>

    

