<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-12 coverPhoto" >
            <img src="https://res.cloudinary.com/bvcoe/image/upload/v1531059013/samples/landscapes/beach-boat.jpg" alt="Unable to load">
            <div class="profilePhoto">
                <img src="https://res.cloudinary.com/bvcoe/image/upload/v1531062014/aykhz4pkalyej0lmngmn.jpg" alt="">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 aboutMeCard">
            <h1>About Me</h1>
            <p><strong>First Name </strong><%= currentUser.firstname %></p>
            <p><strong>Last Name </strong><%= currentUser.lastname %></p>
            <p><strong>Email Id </strong><%= currentUser.email %></p>  
            <p><strong>Date Of Birth </strong><%= currentUser.dob %></p>
            <p><strong>Gender </strong><%= currentUser.gender %></p>
            <p><strong>About Me </strong><%= currentUser.about %></p>
            <a href="/profile/edit" class="btn btn-outline-primary">Edit profile Info </a>
            <a href="/admin" class="btn btn-outline-info">Make me admin</a>
        </div>
        <div class="col-md-8 profilePosts">
            <h1>My Posts</h1>
            <% usercampgrounds.forEach(function(campground){  %>
                <div class="individualPost">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="<%= campground.image %>" alt="">
                        </div>
                        <div class="col-md-8">
                            <h2><%= campground.name %></h2>
                            <%= moment(campground.createdAt).fromNow() %>
                            <% if(campground.info) %>
                            <p><%= campground.info.substring(0,50) %>...</p>
                            <a class="btn btn-outline-primary" href="/campgrounds/<%= campground._id %>">Read more</a>
                        </div>
                    </div>
                </div>  
                <hr>
            <% })%>
        </div>
    </div>
    
</div>


<% include ../partials/footer %>