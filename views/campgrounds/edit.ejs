<% include ../partials/header %>
<div class="container">

<h1 style="text-align: center">EDIT CAMPGROUND</h1>
<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
     <div style="width: 30%;  margin: 25px auto; ">   
      <div class="form-group">
          <label for="name">Name</label>
          <input type="name" name="campground[name]" class="form-control" value="<%= campground.name %>">
        </div>
        <div class="form-group">
          <label for="imageURL">Either paste image url or upload image</label>
          <input type="text" name="imageURL" class="form-control"  placeholder="imageURL">
          <input type="file" id="image" name="image" accept="image/*" >
        </div>
        <div class="form-group">
          <label for="price">COST</label>
          <input type="number" min="0" step="0.01" name="campground[price]" class="form-control" value="<%= campground.price %>">
        </div>
        <div class="form-group">
          <label for="info">INFORMATION</label>
        <textarea class="form-control" rows="3" name="campground[info]"><%= campground.info %></textarea>
        </div>
        <button type="submit" class="btn btn-block">Submit</button>
      </form>
      <a href="./">GO BACK</a>
    </div>
     

    </div>
<% include ../partials/footer %>