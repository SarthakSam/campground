<% include ../partials/header %>
<div class="container">

<h1 style="text-align: center">EDIT CAMPGROUND</h1>
<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
     <div style="width: 30%;  margin: 25px auto; ">   
      <div class="form-group">
          <label for="name">Name</label>
          <input type="name" name="campground[name]" class="form-control" value="<%= campground.name %>">
        </div>
        <div class="form-group">
          <label for="imageURL">IMAGEURL</label>
          <input type="text" name="campground[image]" class="form-control" value="<%= campground.image %>">
        </div>
        <div class="form-group">
          <label for="info">INFORMATION</label>
        <textarea class="form-control" rows="3" name="campground[info]"><%= campground.info %></textarea>
        </div>
        <button type="submit" class="btn btn-block">Submit</button>
      </form>
      <a href="./">GO BACK</a>
    </div>
     

    </div>
<% include ../partials/footer %>