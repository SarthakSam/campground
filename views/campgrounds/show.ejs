<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <ul class="list-group">
                <li class="list-group-item active">Category 1</li>
                <li class="list-group-item">Category 2</li>
                <li class="list-group-item">Category 3</li>
              </ul>
              <div class="card" >
                <div class="card-body" >
                  <div class="image-top" id="map" style="height: 200px; width: 100%;"></div>
                  <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                  <form id="locationSubmitForm">
                    <div class="form-group">
                            <label for="location">ADD LOCATION</label>
                            <input id="location" type="text" name="location" class="form-control"  placeholder="Add location" required >
                    </div>
                            <button  class="btn btn-block btn-primary" >ADD</button>
                  </form>  
                   <!-- <a href="/campgrounds/<%= campground.id %>/editLocation" class="btn btn-primary">Edit Location</a> -->
                </div>
              </div>

              
        </div>
        <div class="col-md-9">
            <div class="card" >
                <img class="card-img-top img-thumbnail" src="<%= campground.image %>">
                <div class="card-body">
                <div class="d-flex justify-content-between">
                        <h5 class="card-title "><a href=""><%= campground["name"] %></a></h5>
                        <h5 class="card-title "> $<%= campground.price %>/Night </h5>
                </div>
                 
                  <p class="card-text"><%= campground.info %></p>
                  <div class="d-flex justify-content-between">
                  <em>POSTED BY: <%= campground.postedBy.username %></em>
                  <span><%= campground.comments.length %> reviews</span>
                </div>
                <br>
                <% if(currentUser&&campground.postedBy.id.equals(currentUser._id)) {%>
                <div >
                        <a class = "btn btn-outline-warning" href="/campgrounds/<%= campground._id %>/edit">UPDATE</a>
                        <form class="deleteButton" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                            <button  class = "btn btn-outline-danger" >DELETE</button>        
                        </form>                          
                        
                </div>
                <% } %>
              </div>      
        </div>

        <div class="card bg-light " style="margin-top: 10px; padding: 3%; ">
                <div class="card-block">
                        <div class="text-right" >
                                <a class = "btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add a review</a> 
                        </div>
                        <hr>
                           <% campground.comments.forEach(function(comment){ %>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="d-flex justify-content-between">
                                        <strong><%= comment.author.name %></strong>    
                                        <span>10 days ago</span>
                                    </div>  
                                        <p><%= comment.text %></p>           
                                </div>
                                <% if(currentUser&&comment.author.id.equals(currentUser._id)){ %>
                                <a class = "btn btn-outline-warning" href="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/edit">EDIT COMMENT</a>
                                <form class="deleteButton" action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                                    <button  class = "btn btn-outline-danger" >DELETE</button>        
                                </form>                          
                                <% } %>
                            </div>
                         <% }); %> 
                </div>
           </div>

    </div> 
</div>

<% include ../partials/footer %>