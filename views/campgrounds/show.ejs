<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            Yelp Camp
            <ul class="list-group">
                <li class="list-group-item active">Category 1</li>
                <li class="list-group-item">Category 2</li>
                <li class="list-group-item">Category 3</li>
              </ul>
        </div>
        <div class="col-md-9">
           
            <div class="card" >
                <img class="card-img-top img-thumbnail" src="<%= campground.image %>">
                <div class="card-body">
                <div class="d-flex justify-content-between">
                        <h5 class="card-title "><a href=""><%= campground["name"] %></a></h5>
                        <h5 class="card-title "> $9.00/Night </h5>
                </div>
                 
                  <p class="card-text"><%= campground.info %></p>
                  <div class="d-flex justify-content-end">
                  <span><%= campground.comments.length %> reviews</span>
                </div>
              </div>      
        </div>

        <div class="card bg-light " style="margin-top: 10px; padding: 3%; ">
                <div class="card-block">
                        <div class="text-right" >
                                <a class = "btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add a review</a> 
                        </div>
                        <hr>
                           <% campground.comments.forEach(function(comment){ %>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="d-flex justify-content-between">
                                        <span>* * * * *<%= comment.author %></span>    
                                        <span>10 days ago</span>
                                    </div>  
                                        <p><%= comment.text %></p>           
                                </div>
                            </div>
                         <% }); %> 
                </div>
           </div>

    </div> 
</div>

<% include ../partials/footer %>